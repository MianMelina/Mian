Private Sub eins_Click()
    If Not TypeName(Selection) = "Range" Then ' Check if a range of cells is selected
        MsgBox "Bitte wählen Sie eine Zelle oder einen Zellbereich aus.", vbCritical
        Exit Sub
    End If
    
    With Selection ' With block to operate on the selected range
        .Merge ' Merge the selected cells
        .HorizontalAlignment = xlCenter ' Center the contents horizontally
        .Interior.Color = RGB(91, 155, 213) ' Set the background color to red
    End With
End Sub

Private Sub org_Change()
    Dim selectedRange As Range
    Set selectedRange = Selection ' speichert den ausgewählten Zellbereich in der Variablen selectedRange
    If Not selectedRange Is Nothing Then ' überprüft, ob ein Zellbereich ausgewählt ist
        For Each cell In selectedRange ' iteriert durch jede Zelle im ausgewählten Bereich
            cell.Value = CStr(org.Value) ' Konvertiert den Wert in Text und überschreibt den Zellwert
            cell.HorizontalAlignment = xlCenter ' Zentriert den Text horizontal
            cell.VerticalAlignment = xlCenter ' Zentriert den Text vertikal
        Next cell
    End If
End Sub




